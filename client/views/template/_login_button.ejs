<% if (!data.session.passport?.user){ %>
<ul class="account_buttons">
  <a class="twitch_login" href="/auth/twitch"><i class="fa-brands fa-twitch"></i> Login with Twitch</a>
</ul>
<% } else { %>
<ul class="account_buttons">
  <a class="twitch_login" href="/"><i class="fa-solid fa-house"></i></a>
  <% if (data.trimmedPath !== ''){ %> <% if (!data.trimmedPath.includes('settings/')){ %>
  <a class="twitch_login" href="/settings/<%= data.trimmedPath %>"><i class="fa-solid fa-gear"></i></a>
  <% } else { %>
  <a class="twitch_login" href="<%= data.trimmedPath.replace('settings','') %> "
    ><i class="fa-solid fa-backward"></i
  ></a>
  <% } %> <% } %>
  <a class="twitch_login" href="/logout"><i class="fa-solid fa-arrow-right-from-bracket"></i> Logout</a>
</ul>
<% } %>
